
@model Pim_Frontend.Models.Cliente
@{
    ViewBag.Title = "Genesis Solutions: Meu perfil";
    Layout = "~/Views/_Layout/_Layout.cshtml";
}


<section class="d-flex flex-column w-75 h-100">
    <header></header>
    <main class="d-flex flex-column h-100 justify-content-center">
        <section class="d-flex h-100 justify-content-center align-items-center">
            <div class="d-flex w-100 h-75 flex-column justify-content-center align-items-center">
                <h1 class="mb-5 mt-3" style="font-size: 22px"> Meu Perfil <i class="fa-regular fa-user ml-2"></i> </h1>
                <section class="d-flex w-100 justify-content-center">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Senha)
                        <div class="d-flex">
                            <div class="d-flex flex-column w-100 align-items-center">
                                <div class="d-flex flex-column justify-content-center mb-2">
                                    <span class="mr-3">@Html.LabelFor(Nome => Model.Nome)</span>
                                    @Html.EditorFor(Nome => Model.Nome)
                                    <span style="font-size: 12px">@Html.ValidationMessageFor(Nome => Model.Nome)</span>
                                </div>
                                <div class="d-flex flex-column justify-content-center mb-2">
                                    <span class="mr-3">@Html.LabelFor(CNPJ => Model.CNPJ)</span>

                                    @Html.EditorFor(CNPJ => Model.CNPJ)
                                    <span style="font-size: 12px">@Html.ValidationMessageFor(CNPJ => Model.CNPJ)</span>

                                </div>
                                <div class="d-flex flex-column justify-content-center mb-2">
                                    <span class="mr-4">@Html.LabelFor(CEP => Model.CEP)</span>
                                    @Html.EditorFor(CEP => Model.CEP)
                                    <span style="font-size: 12px">@Html.ValidationMessageFor(CEP => Model.CEP)</span>
                                </div>
                                <div class="d-flex flex-column justify-content-center mb-2">
                                    <span class="mr-3">@Html.LabelFor(Email => Model.Email)</span>
                                    @Html.EditorFor(Email => Model.Email)
                                    <span style="font-size: 12px">@Html.ValidationMessageFor(Email => Model.Email)</span>
                                </div>
                                <div class="d-flex justify-content-around align-items-center" style="width: 100%">
                                    <p class="mt-3" style="text-decoration: underline; font-size: 15px"> <a style="color: inherit" href="@Url.Action("mainPage","Home")">Voltar</a> </p>
                                    <button class="btn h-75" style="color: white; background-color: #798645">Alterar</button>
                                </div>
                            </div>
                        </div>
                    }
                </section>
            </div>
            <div style="width: 50% " class="h-100">
                <img src="~/Content/IMG/plantas_deco.jpg" style="object-fit: fill; width: 100%; height: 100%">
            </div>
        </section>
    </main>
    <footer></footer>
</section>

