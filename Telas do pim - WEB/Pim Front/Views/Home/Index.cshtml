
@model Pim_Frontend.Models.Cliente
@{
    ViewBag.Title = "Genesis Solutions: Início";
    Layout = "~/Views/_Layout/_Layout.cshtml";
}
@{ var status = TempData["Status"] as string;}
@if (!string.IsNullOrEmpty(status))
{
    if (status == "sucesso")
    {
        <script>
            $(document).ready(function () {
                toastr.success('Sucesso. Cadastro bem sucedido!');
            });
        </script>
    }
    else
    {
        <script>
            $(document).ready(function () {
                toastr.error('Erro. Credenciais Inválidas.');
            });
        </script>
    }
}

<section class="d-flex flex-column w-75 h-100">
    <header></header>
    <main class="d-flex flex-column justify-content-center">
        <section class="d-flex h-100 justify-content-center align-items-center">
            <div class="d-flex flex-column justify-content-center align-items-center" style="flex-grow: 1">
                <h2 class="mb-5"> Tela de Login <i class="fa-solid fa-right-to-bracket ml-1"></i> </h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group d-flex justify-content-center">
                        @Html.LabelFor(Email => Model.Email)
                        <div class="ml-3 mb-3 d-flex flex-column">
                            @Html.EditorFor(Email => Model.Email)
                            <span style="font-size: 12px">@Html.ValidationMessageFor(Email => Model.Email)</span>
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        @Html.LabelFor(Senha => Model.Senha)
                        <div class="ml-3 mb-3 d-flex flex-column">
                            @Html.PasswordFor(Senha => Model.Senha)
                            <span style="font-size: 12px">@Html.ValidationMessageFor(Senha => Model.Senha)</span>
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        <input type="submit" value="Entrar" class="btn" style="color: white; background-color: #798645" />
                    </div>

                }
                <p style="font-size: 12px">Ainda não possui cadastro? <a href="@Url.Action("cadLogin", "Home")"> Registre-se. <i class="fa-solid fa-up-right-from-square"></i></a> </p>
            </div>
            <div style="width: 35% " class="h-100">
                <img src="~/Content/IMG/plantas_deco.jpg" style="object-fit: fill; width: 100%; height: 100%">
            </div>
        </section>
    </main>
    <footer></footer>
</section>